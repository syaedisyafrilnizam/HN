<%- include("partials/header"); -%>
<!-- Custom styles -->
<link href="css/post.css" rel="stylesheet">
</head>

<body class="text-center" style="background-color: #b6d5e1">
<%- include("partials/navbar"); -%>

<main role="main">
  <form class="post">
    <div class="container">
      <!-- Category, tag, files -->
      <div class="row row1">
        <label for="category">Category</label>
        <div class="option-box tag-box">
          <label id="tag">Add tag</label>
          <img src="images/post-add-tag.png" width="25px", height="25px"></img>
        </div>
        <div class="option-box files-box">
          <img src="images/post-emoticon.png" width="25px", height="25px"></img>
          <img src="images/post-clip.png" width="25px", height="25px"></img>
          <img src="images/post-image.png" width="25px", height="25px"></img>
          <img src="images/post-location.png" width="25px", height="25px"></img>
        </div>
      </div>

      <!-- Title -->
      <div class="row row2">
        <label for="title" class="sr-only">Title</label>
        <input name="title" id="title" type="" placeholder="Title" maxlength="50" required />
      </div>

      <!-- Tag name, New Field -->
      <div class="row row3">
        <label for="tagName" class="sr-only">Tag name</label>
        <input name="tagName" id="tagName" type="" placeholder="tagName" maxlength="50" required />

        <label for="newField" class="sr-only">New Field</label>
        <input name="newField" id="newField" type="" placeholder="New Field" maxlength="50" required />
      </div>

      <!-- Contents -->
      <div class="row row4">
        <label for="contents" class="sr-only">New Field</label>
        <input name="contents" id="contents" type="" placeholder="What would you like to share?" maxlength="500" required />
      </div>

      <!-- Buttons -->
      <div class="row row5">
        <div class="cancel-box">

        </div>
        <div class="post-box">
          <button type="button" id="btn-cancel" name="btn-cancel">Cancel</button>
          <button type="submit" id="btn-post" name="btn-post">Post</button>
        </div>
      </div>

    </div>
  </form>
</main>

<!-- FOOTER -->
